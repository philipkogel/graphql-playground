{
  "name": "graphql-playground",
  "version": "1.0.0",
  "description": "GraphQL Playground server with Apollo",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "dev": "nodemon --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "start": "npm run compile && node ./dist/index.js"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
